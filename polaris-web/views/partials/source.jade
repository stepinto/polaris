.source
  .loading
    p(ng-show='loading') Loading...
  .left
    project-tree(project="project", path="path")
  .right
    file-structure-tree(classes="classes")
  .main
    .main-top
      code-view(
          ng-hide='loading',
          code='sourceCodeAnnotation',
          find-type-usages="findTypeUsages(typeId)",
          go-to-type-definition="goToTypeDefinition(typeId)",
          find-method-usages="findMethodUsages(methodId)",
          go-to-method-definication="goToMethodDefinition(methodId)",
          highlighted-line='highlightedLine')
    .panel.main-bottom
      .header
        span xref
      .body
        span(ng-show='loadingXrefs') Loading
        xref-box(xrefs="xrefs", ng-hide='loadingXrefs')
