span.variable-usage
  a(
    ng-href="{{'#' + variableUrl}}",
    ng-transclude,
    ng-class="{'highlighted-word': highlightedVariableId == variableId}")
  span.dropdown
    a.dropdown-toggle(data-toggle="dropdown", href="#")
      b.caret
    ul.dropdown-menu(role="menu")
      li
        a(href="javascript:void(0)", ng-click="goToDefinitionInternal()") Definition
      li
        a(href="javascript:void(0)", ng-click="findUsagesInternal()") Usages
